{
  "manifest_version": 3,
  "name": "ScrollStamp",
  "version": "1.0.0",
  "description": "Save and revisit scroll positions on any webpage",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScrollStamp"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}
