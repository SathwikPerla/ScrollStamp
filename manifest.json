{
  "manifest_version": 3,
  "name": "ScrollStamp v2",
  "version": "2.0.0",
  "description": "Bookmark AI assistant messages in chat conversations",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://grok.x.ai/*",
        "https://chat.deepseek.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScrollStamp v2"
  }
}
